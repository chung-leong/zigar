{
  "name": "zigar-loader",
  "version": "0.15.2-rc.1",
  "description": "Webpack plugin for transpiling Zig code",
  "main": "./dist/index.js",
  "bin": {
    "zigar-loader": "bin/cli.js",
    "zigar": "bin/cli.js"
  },
  "type": "commonjs",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "mocha -- --no-warnings test/*.test.mjs",
    "debug": "mocha --reporter spec --inspect-brk -- test/*.test.mjs",
    "coverage": "c8 mocha -- test/*.test.mjs"
  },
  "files": [
    "dist/*",
    "bin/*",
    "!**/.*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chung-leong/zigar.git"
  },
  "keywords": [
    "zig",
    "webpack"
  ],
  "author": "Chung Leong",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chung-leong/zigar/issues"
  },
  "homepage": "https://github.com/chung-leong/zigar/wiki",
  "dependencies": {
    "zigar-compiler": "^0.15.2-rc.1",
    "zigar-runtime": "^0.15.2-rc.1"
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "chai": "^6.2.1",
    "mocha": "^11.7.5",
    "mocha-skip-if": "^1.0.4",
    "webpack": "^5.103.0"
  }
}
