{
  "name": "node-zigar-addon",
  "version": "0.11.0",
  "description": "NodeJS C++ addon for loading compiled Zig module",
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./cjs": "./dist/index.cjs"
  },
  "type": "module",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "node ./node_modules/mocha/bin/mocha.js --parallel -- test/*.test.js",
    "test:gc": "node --expose-gc ./node_modules/mocha/bin/mocha.js -- test/gc/*.test.js",
    "debug": "node --inspect-brk ./node_modules/mocha/bin/mocha.js -- test/*.test.js",
    "coverage": "node ./node_modules/c8/bin/c8.js ./node_modules/mocha/bin/mocha.js --parallel -- test/*.test.js",
    "build": "npm run rollup && cmake-js compile",
    "install": "cmake-js compile",
    "rollup": "rollup -c rollup.config.js"
  },
  "files": [
    "src/*",
    "dist/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chung-leong/zigar.git"
  },
  "keywords": [
    "zig",
    "nodejs"
  ],
  "author": "Chung Leong",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chung-leong/zigar/issues"
  },
  "homepage": "https://github.com/chung-leong/zigar#readme",
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "c8": "^8.0.1",
    "chai": "^4.3.10",
    "mocha": "^10.2.0",
    "mocha-skip-if": "^1.0.4",
    "rollup": "^4.9.1",
    "rollup-plugin-strip-code": "^0.2.7"
  },
  "dependencies": {
    "cmake-js": "^7.2.1"
  }
}
