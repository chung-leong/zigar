{
  "name": "node-zigar-addon",
  "version": "0.14.2",
  "description": "NodeJS addon for loading Zig native modules",
  "main": "./dist/index.cjs",
  "type": "module",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "mocha -- test/*.test.js",
    "test:gc": "mocha --v8-expose-gc -- test/gc/*.test.js",
    "debug": "mocha --reporter spec --inspect-brk -- test/*.test.js",
    "coverage": "c8 mocha -- test/*.test.js",
    "rollup": "rollup -c rollup.config.js && rm src/dist/addon.??b.js && cp ../zigar-compiler/zig/host/native/interface.zig ../zigar-compiler/zig/host/native/hooks.zig ./src/module/native/",
    "copy": "cp ../zigar-compiler/zig/host/native/interface.zig ../zigar-compiler/zig/host/native/hooks.zig ./src/module/native"
  },
  "files": [
    "src/*",
    "dist/*",
    "build.zig"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chung-leong/zigar.git"
  },
  "keywords": [
    "zig",
    "nodejs"
  ],
  "author": "Chung Leong",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chung-leong/zigar/issues"
  },
  "homepage": "https://github.com/chung-leong/zigar/wiki",
  "dependencies": {
    "node-api-headers": "^1.6.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-replace": "^6.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "c8": "^10.1.3",
    "chai": "^6.2.0",
    "mocha": "^11.7.4",
    "mocha-skip-if": "^1.0.4",
    "rollup": "^4.52.5",
    "rollup-plugin-gzip": "^4.1.1"
  }
}
