{
  "name": "zigar-runtime",
  "version": "0.13.2",
  "description": "JavaScript runtime for code transpiled using Zigar",
  "main": "./dist/index.js",
  "type": "module",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "DEV=1 TARGET=wasm mocha --no-warnings 'test/**/*.test.js'",
    "test:node": "DEV=1 TARGET=node mocha --no-warnings 'test/**/*.test.js'",
    "test:both": "npm run test && npm run test:node",
    "debug": "DEV=1 TARGET=wasm mocha --reporter spec --inspect-brk 'test/**/*.test.js'",
    "coverage": "c8 npm run test",
    "rollup": "rollup -c rollup.config.js"
  },
  "files": [
    "dist/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chung-leong/zigar.git"
  },
  "keywords": [
    "zig",
    "javascript"
  ],
  "author": "Chung Leong",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chung-leong/zigar/issues"
  },
  "homepage": "https://github.com/chung-leong/zigar/wiki",
  "devDependencies": {
    "c8": "^10.1.2",
    "chai": "^5.1.1",
    "mersenne-twister": "^1.1.0",
    "mocha": "^10.7.3",
    "mocha-skip-if": "^1.0.4",
    "rollup": "^4.20.0"
  }
}
