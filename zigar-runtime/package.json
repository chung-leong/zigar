{
  "name": "zigar-runtime",
  "version": "0.11.1",
  "description": "JavaScript runtime for code transpiled using Zigar",
  "main": "./dist/index.js",
  "type": "module",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "mocha --parallel -- test/*.test.js",
    "debug": "mocha --reporter spec --inspect-brk -- test/*.test.js",
    "coverage": "c8 mocha --parallel -- test/*.test.js",
    "rollup": "rollup -c rollup.config.js"
  },
  "files": [
    "dist/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chung-leong/zigar.git"
  },
  "keywords": [
    "zig",
    "javascript"
  ],
  "author": "Chung Leong",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chung-leong/zigar/issues"
  },
  "homepage": "https://github.com/chung-leong/zigar/#readme",
  "devDependencies": {
    "c8": "^8.0.1",
    "chai": "^4.3.10",
    "mersenne-twister": "^1.1.0",
    "mocha": "^10.2.0",
    "mocha-skip-if": "^1.0.4",
    "rollup": "^4.9.1",
    "rollup-plugin-strip-code": "^0.2.7"
  }
}
