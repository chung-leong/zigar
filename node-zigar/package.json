{
  "name": "node-zigar",
  "version": "0.11.0",
  "description": "Enable the use of Zig in NodeJS",
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./n14": "./dist/index-n14.js"
  },
  "type": "module",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "node --experimental-loader ./dist/index.js --no-warnings ./node_modules/mocha/bin/mocha.js --parallel -- test/*.test.js",
    "test:extended": "node --experimental-loader ./dist/index.js --no-warnings ./node_modules/mocha/bin/mocha.js --parallel -- test/*.test.js",
    "debug": "node --inspect-brk --experimental-loader ./dist/index.js --no-warnings ./node_modules/mocha/bin/mocha.js -- test/*.test.js",
    "coverage": "NODE_OPTIONS='--experimental-loader ./dist/index.js --no-warnings' node ./node_modules/c8/bin/c8.js ./node_modules/mocha/bin/mocha.js --parallel -- test/*.test.js",
    "integration-coverage": "NODE_OPTIONS='--experimental-loader ./dist/index.js --no-warnings' node ./node_modules/c8/bin/c8.js ./node_modules/mocha/bin/mocha.js --parallel -- test/integration.test.js"
  },
  "files": [
    "dist/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chung-leong/zigar.git"
  },
  "keywords": [
    "zig",
    "nodejs"
  ],
  "author": "Chung Leong",
  "license": "MIT",
  "gypfile": true,
  "bugs": {
    "url": "https://github.com/chung-leong/zigar/issues"
  },
  "homepage": "https://github.com/chung-leong/zigar#readme",
  "dependencies": {
    "node-zigar-addon": "^0.11.0",
    "zigar-compiler": "^0.11.0"
  },
  "devDependencies": {
    "c8": "^8.0.1",
    "chai": "^4.3.10",
    "mocha": "^10.2.0",
    "mocha-skip-if": "^1.0.4"
  }
}
