{
  "name": "node-zigar",
  "version": "0.12.0",
  "description": "Enable the use of Zig in NodeJS",
  "main": "./dist/index.js",
  "type": "module",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "NODE_ENV=development node --experimental-loader ./dist/index.js --no-warnings ./node_modules/mocha/bin/mocha.js --parallel -- test/*.test.js",
    "test:gc": "NODE_ENV=development node --expose-gc ./node_modules/mocha/bin/mocha.js -- test/gc/*.test.js",
    "debug": "NODE_ENV=development node --inspect-brk --experimental-loader ./dist/index.js --no-warnings ./node_modules/mocha/bin/mocha.js -- test/*.test.js",
    "coverage": "NODE_ENV=development NODE_OPTIONS='--experimental-loader ./dist/index.js --no-warnings' node ./node_modules/c8/bin/c8.js ./node_modules/mocha/bin/mocha.js --parallel -- test/*.test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chung-leong/zigar.git"
  },
  "keywords": [
    "zig"
  ],
  "author": "Chung Leong",
  "license": "MIT",
  "gypfile": true,
  "bugs": {
    "url": "https://github.com/chung-leong/zigar/issues"
  },
  "homepage": "https://github.com/chung-leong/zigar#readme",
  "devDependencies": {
    "c8": "^8.0.0",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "mocha-skip-if": "^1.0.4"
  }
}
