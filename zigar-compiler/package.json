{
  "name": "zigar-compiler",
  "version": "0.13.2",
  "description": "Compile Zig code into WASM or native module",
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./transpiler": "./dist/transpiler.js"
  },
  "type": "module",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "mocha -- test/*.test.js",
    "debug": "mocha --reporter spec --inspect-brk -- test/*.test.js",
    "coverage": "c8 mocha -- test/*.test.js",
    "rollup": "rollup -c rollup.config.js"
  },
  "files": [
    "dist/*",
    "zig/*.zig",
    "zig/os/*.zig"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chung-leong/zigar.git"
  },
  "keywords": [
    "zig"
  ],
  "author": "Chung Leong",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chung-leong/zigar/issues"
  },
  "homepage": "https://github.com/chung-leong/zigar/wiki",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.7",
    "c8": "^10.1.2",
    "chai": "^5.1.1",
    "chai-as-promised": "^8.0.0",
    "mocha": "^10.7.3",
    "mocha-skip-if": "^1.0.4",
    "rollup": "^4.20.0"
  },
  "dependencies": {
    "@rollup/plugin-url": "^8.0.2"
  }
}
